<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:columnCount="2"
        android:rowCount="2"
        >

    <TextView
        android:id="@+id/textView_Weight"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_rowSpan="2"
        android:textSize="25dp"
        android:text="0.0" />


        <Button
            android:layout_weight="1"
            android:id="@+id/btn_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lire poids" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_read_38BB5CF5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lire poids 38BB5CF5"
            android:visibility="visible"
            />


</GridLayout>





    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/btn_init_profil_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Init Profil 1" />
        <Button
            android:id="@+id/btn_init_profil_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Init Profil 2" />
        <Button
            android:id="@+id/btn_init_profil_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Init Profil 3" />


        <Button
            android:id="@+id/btn_init_profil_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Init Profil 4" />
        <Button
            android:id="@+id/btn_init_profil_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Init Profil 5" />
        <Button
            android:id="@+id/btn_init_profil_6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Init Profil 6" />

        <Button
            android:id="@+id/btn_init_profil_7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Init Profil 7" />
        <Button
            android:id="@+id/btn_init_profil_8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Init Profil 8" />
    </GridLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_shown_help_init"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Aide initialisation"/>

        <Button
            android:id="@+id/btn_shown_help_read"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Aide lecture"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <WebView
            android:id="@+id/WebView_help"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


        </WebView>
    </LinearLayout>






</LinearLayout>